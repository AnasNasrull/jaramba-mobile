<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="855dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/greeting_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="12dp"
            android:scaleType="fitXY" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">


    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#006468"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="48dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="87dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_jaramba_full" />

    <TextView
        android:id="@+id/txt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enter Start point trip"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting_text" />

    <Button
            android:id="@+id/btn_start_city"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_button_trip"
            android:text="City"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_start"
            tools:text="City" />

        <Button
            android:id="@+id/btn_start_area"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_button_trip"
            android:text="Area"
            app:layout_constraintStart_toEndOf="@+id/btn_start_city"
            app:layout_constraintTop_toBottomOf="@+id/txt_start"
            tools:text="Area" />


    <TextView
        android:id="@+id/txt_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enter Destination point"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_city" />

    <Button
            android:id="@+id/btn_dest_city"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_button_trip"
            android:text="City"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_destination"
            tools:text="City" />

        <Button
            android:id="@+id/btn_dest_area"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_button_trip"
            android:text="Area"
            app:layout_constraintStart_toEndOf="@+id/btn_dest_city"
            app:layout_constraintTop_toBottomOf="@+id/txt_destination"
            tools:text="Area" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Enter Date"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toEndOf="@+id/txt_destination"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_area" />

    <EditText
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_button_trip"
            android:text="DD/MM/YY"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_destination"
            app:layout_constraintTop_toBottomOf="@+id/txt_date"
            tools:text="DD/MM/YY" />
</androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/listMode1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_button_trip"
        >
        <TextView
            android:id="@+id/modekendaraan1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Damri "
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_tarif1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="-"
            android:textSize="18sp"
            android:textColor="#000"/>
        <Button
            android:id="@+id/btn_go"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="GO"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_button_trip"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/listMode1"
            android:id="@+id/listMode2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_button_trip"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/modekendaraan2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Kereta"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_tarif2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="-"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/modekendaraan2"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_go"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="GO"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_button_trip"
                tools:ignore="DuplicateIds" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_navigasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        app:menu="@menu/menu_navigasi"/>

</LinearLayout>