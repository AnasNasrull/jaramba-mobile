<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProfilePage">
    
    
    <ImageView
        android:id="@+id/setting_profile_page"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_settings_black_48dp"
        android:layout_margin="10dp"
        android:onClick="userSettings"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/image"
        tools:ignore="OnClick" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_page"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_face_black_24dp"
        android:layout_below="@+id/setting_profile_page"
        app:civ_border_width="3dp"
        app:civ_border_color="#77000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/edit_profile_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_profil"
        android:layout_below="@+id/img_profile_page"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/info_profile_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/edit_profile_page"
        android:layout_marginTop="30dp"
        android:background="#77000000">

        <TextView
            android:id="@+id/tv_profil_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:textSize="23sp"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tv_profil_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_profil_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>



    <Button
        android:id="@+id/btn_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_btn"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="logout"
        tools:ignore="OnClick" />


    

</RelativeLayout>