<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dialog"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jaramba_logo_04"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jaramba akan mengirimkan pesan \nmelalui email anda, kemudian anda \ndapat mengubah kata sandi \nmelalui pesan tersebut"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/email_anda"
            android:autofillHints="no"
            android:inputType="textEmailAddress" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_dismiss_ubahpassword"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="Batal"
                android:layout_marginEnd="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_ubahpassword"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_btn"
                android:layout_toEndOf="@+id/btn_dismiss_ubahpassword"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="Konfirmasi"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </RelativeLayout>





    </LinearLayout>

</LinearLayout>