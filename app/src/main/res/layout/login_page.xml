<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/image"
        android:src="@drawable/jaramba_logo_04" />

    <TextView
        android:id="@+id/txt_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/petualangan_seru_dimulai_dari_sini"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/nunitosans_semibold"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:fontFamily="@font/nunitosans_regular"
        android:layout_marginBottom="16dp"
        android:text="@string/nikmati_kemudahan_perjalanan_n_hanya_dengan_satu_aplikasi"
        />

    <EditText
        android:id="@+id/et_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitosans_regular"
        android:hint="@string/masukkan_email"
        android:layout_marginBottom="10dp"
        android:autofillHints="no"
        android:background="@drawable/rounded_et"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:padding="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_password"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kata_sandi"
            android:background="@drawable/rounded_et"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nunitosans_regular"
            android:padding="15dp"
            android:autofillHints="no"
            android:inputType="textPassword"
            android:layout_marginBottom="25dp"
            tools:ignore="TextFields" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btn_login"
        android:layout_width="281dp"
        android:layout_height="match_parent"
        android:onClick="login"
        android:text="@string/login"
        android:textColor="#000000"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="#EA604E"
        app:sub_btn_ripple_color="#EA604E"
        app:sub_btn_tick_color="@color/white"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/txt_lupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitosans_semibold"
        android:onClick="lupaPassword"
        android:padding="10dp"
        android:text="@string/lupa_password"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_havent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_regular"
            android:text="@string/belum_memiliki_akun"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_semibold"
            android:onClick="mendaftar"
            android:padding="10dp"
            android:text="@string/mendaftar"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="OnClick" />

    </LinearLayout>


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>