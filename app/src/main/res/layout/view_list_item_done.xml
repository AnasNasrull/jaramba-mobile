<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginTop="25dp"
    android:background="@drawable/border_black"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconbus2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_directions_bus_24"
        android:contentDescription="@string/icon_bus" />

    <TextView
        android:id="@+id/dari2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/nunitosans_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconbus2"
        app:layout_constraintEnd_toStartOf="@id/rate"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tujuan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dari2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/nunitosans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconbus2"
        app:layout_constraintEnd_toStartOf="@id/rate"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/rate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iconinfo2"
        app:srcCompat="@drawable/ic_baseline_star_24"
        android:contentDescription="@string/icon_rate" />

    <ImageView
        android:id="@+id/iconinfo2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_info_black_24"
        android:contentDescription="@string/icon_info" />

</androidx.constraintlayout.widget.ConstraintLayout>