<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp"
    android:background="@drawable/border_black">

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail trip"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="47dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        app:srcCompat="@drawable/ic_baseline_directions_bus_24" />

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start : "
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@+id/detail" />

    <TextView
        android:id="@+id/start_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Jl. Terusan Ryacudu"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/start_text"
        app:layout_constraintTop_toBottomOf="@+id/detail" />

    <TextView
        android:id="@+id/to_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To : "
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@+id/start_text" />

    <TextView
        android:id="@+id/to_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramayana Pasar Bawah"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/to_text"
        app:layout_constraintTop_toBottomOf="@+id/start_text" />

    <TextView
        android:id="@+id/tgl_text_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal : "
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@+id/to_text" />

    <TextView
        android:id="@+id/tgl_data_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09-06-2020"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tgl_text_det"
        app:layout_constraintTop_toBottomOf="@+id/to_text" />

    <TextView
        android:id="@+id/jml_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Penumpang : "
        android:textColor="@color/black"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toBottomOf="@+id/tgl_text_det" />

    <TextView
        android:id="@+id/jml_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Orang"
        android:textColor="@color/black"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toEndOf="@id/jml_text"
        app:layout_constraintTop_toBottomOf="@+id/tgl_text_det" />

    <TextView
        android:id="@+id/harga_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 20000"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jml_text" />

    <TextView
        android:id="@+id/byr_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran : "
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/crbyr_det"
        app:layout_constraintTop_toBottomOf="@+id/jml_text" />

    <TextView
        android:id="@+id/crbyr_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jml_data" />

</androidx.constraintlayout.widget.ConstraintLayout>