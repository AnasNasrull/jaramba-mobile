<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginTop="25dp"
    android:background="@drawable/border_orange"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/iconbus1"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_baseline_directions_bus_24"
        android:contentDescription="@string/icon_bus" />

    <TextView
        android:id="@+id/dari1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="@font/nunitosans_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconbus1"
        app:layout_constraintEnd_toStartOf="@id/iconinfo1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tujuan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/nunitosans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconbus1"
        app:layout_constraintEnd_toStartOf="@id/iconinfo1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/status_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dari1"
        android:textStyle="bold"
        android:fontFamily="@font/nunitosans_regular"
        android:layout_marginEnd="5dp"
        android:text="@string/status_list"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconinfo1"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/iconinfo1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="18dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_info_24"
        android:contentDescription="@string/icon_info" />

</androidx.constraintlayout.widget.ConstraintLayout>